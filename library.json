{
  "automerge": false,
  "ignorePaths": ["**/node_modules/**"],
  "ignoreUnstable": true,
  "labels": ["Renovate"],
  "lockFileMaintenance": {
    "enabled": false
  },
  "masterIssue": true,
  "masterIssueTitle": "Renovate Bot - Dependencies Management",
  "rangeStrategy": "auto",
  "schedule": ["before 3am on Monday"],
  "prCreation": "immediate",
  "reviewers": ["dhedgecock"],
