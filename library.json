      "groupName": "dev dependencies",
      "automerge": true
    },
    {
      "depTypeList": ["dependencies"],
      "commitMessagePrefix": "Update: ",
      "commitMessageAction": "Library",
      "commitMessageTopic": "{{depName}} upgrades",
      "commitMessageSuffix": " ðŸ†™",
      "groupName": "dependencies",
      "automerge": false
    }
  ]
